<UserControl x:Class="MSLogistics.MainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSLogistics"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="4*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical">
            <TextBlock Text="Логин:" Margin="5" />
            <TextBox x:Name="TbLogin" Margin="5" MaxLength="150"/>
            <TextBlock Text="Пароль:" Margin="5" />
            <PasswordBox x:Name="PbPassword" Margin="5"/>
            <Button x:Name="BtnLogin" Content="Войти" Margin="5" Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
